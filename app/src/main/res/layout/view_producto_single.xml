<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imagenproduc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/producto" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreproduc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoriaproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Categoria"
                    android:textColor="@android:color/white"
                    android:background="#03A9F4"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/marcaproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marca"
                    android:gravity="center"
                    android:textSize="16sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/codigobarraproduc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Codigo de Barra"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/precioproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio"
                    android:textColor="@android:color/white"
                    android:background="#9C27B0"
                    android:gravity="center"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/stockproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stock"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="#E91E63"
                    android:textSize="16sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/estadoproduc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Estado Producto"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/descripcionpro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Descripcion Producto"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fechacreacionproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha Creacion"
                    android:textColor="@android:color/white"
                    android:background="#03A9F4"
                    android:gravity="center"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/fechavencimientoproduc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha  Vencimi"
                    android:textColor="#F60759"
                    android:gravity="center"

                    android:textSize="16sp" />

            </LinearLayout>


v
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">


            <!-- Botón de editar cliente -->
            <ImageView
                android:id="@+id/btn_editarproducto"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="#3F6BF1"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_edit_24" />

            <!-- Espacio entre los botones -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <!-- Botón de eliminar cliente -->
            <ImageView
                android:id="@+id/btn_eliminarproducto"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="#EF1212"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_delete_24" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>