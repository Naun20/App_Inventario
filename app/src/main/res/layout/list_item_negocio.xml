<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
        <!-- Imagen -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">


            <!-- Agregar ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/fotonegocio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/usuario" />

        </androidx.cardview.widget.CardView>

        <!-- Otros detalles -->
        <TextView
            android:id="@+id/nombrenegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/numerodoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de Documento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Detalles adicionales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/telefononegocio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Telefono"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/impuesto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Impuesto"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/emailnegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email negocio"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/direcionnegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion negocio"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/cai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cai"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/descripcionnegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            android:textSize="16sp"
            android:gravity="center" />

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <!-- BotÃ³n Editar -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/btn_editar_negocio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#3F6BF1"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_edit_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
