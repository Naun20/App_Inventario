<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocavecera"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RestablecerContrasenaActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_editext"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"

            >


            <TextView
                android:id="@+id/lblEmailRegis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restablecer ContraseÃ±a"
                android:textAlignment="center"
                android:textColor="@color/celeste"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawableTint="@color/celeste"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Correo Electronico"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />


            <Button
                android:id="@+id/btn_Restablecer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/celeste"
                android:text="Restablecer"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Regresar!"
                android:textAlignment="center"
                android:textColor="@color/celeste"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>