<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocavecera"
    tools:context=".CreateUsuarioActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRegistroUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Registro de Usuario"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/images_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="70dp">

                    <ImageView
                        android:id="@+id/usuario_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/usuario" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/celeste"
                        android:drawableLeft="@drawable/baseline_edit_24"
                        android:text="Foto" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_eliminarphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F82828"
                        android:drawableLeft="@drawable/baseline_delete_24"
                        android:text="BORRAR" />

                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/txtNombreUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:paddingStart="15dp"
                android:hint="Nombre y Apellido"
                android:drawableTint="@color/celeste"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/txtEmailUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/celeste"
                android:ems="10"
                android:paddingStart="15dp"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/txtTelefonoUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_add_call_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:drawableTint="@color/celeste"
                android:paddingStart="15dp"
                android:hint="Telefono"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/txtUsuarioUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_assignment_ind_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:drawableTint="@color/celeste"
                android:paddingStart="15dp"
                android:hint="Usuario"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/txtContrasenauser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_editext"
                android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:drawableTint="@color/celeste"
                android:paddingStart="15dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background" />

            <Spinner
                android:id="@+id/spinnerTipoUsuariouser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_spinner_background" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Seleccione los Permisos"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="4"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false">

                        <CheckBox
                            android:id="@+id/checkBoxClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxTipoCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo Cliente"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxUsuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuarios"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxProveedores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proveedores"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxCategorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categorias"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxProductos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Productos"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxCompras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compras"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxVentas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventas"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxNegocio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negocio"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxreporteventa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporte Ventas"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxajuste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajuste"
                            android:layout_margin="8dp" />

                        <CheckBox
                            android:id="@+id/checkBoxreportecompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporte Compras"
                            android:layout_margin="8dp" />

                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btn_addUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_4"
                android:text="Agregar" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

